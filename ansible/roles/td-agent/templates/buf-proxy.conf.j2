<source>
  @type tail
  path /var/log/nginx/*/access.ltsv
  pos_file /var/log/td-agent/nginx-access-ltsv.log.pos
  read_from_head true
  tag nginx.access.ltsv
  <parse>
    @type ltsv
    keep_time_key true
  </parse>
</source>

<filter nginx.access.ltsv>
  @type record_transformer
  <record>
    cache_host ${hostname}
  </record>
</filter>

<match nginx.access.ltsv>
  @type copy

  <store>
    @type file
    path /var/log/td-agent/nginx_access_ltsv
    append true
    flush_interval 3
    <format>
      @type ltsv
    </format>
  </store>
</match>