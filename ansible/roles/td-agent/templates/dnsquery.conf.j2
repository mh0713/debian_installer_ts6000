<source>
  @type tail
  path /var/log/syslog
  pos_file /var/log/td-agent/syslog.pos
  read_from_head true
  tag syslog
  <parse>
    @type syslog
    keep_time_key true
  </parse>
</source>

<filter syslog>
  @type grep
  <regexp>
    key ident
    pattern /dnsmasq/
  </regexp>

  <regexp>
    key message
    pattern /query\[.*/
  </regexp>
</filter>

<match syslog.**>
  @type copy

  <store>
    @type file
    path /var/log/td-agent/syslog
    append true
    flush_interval 3
    <format>
      @type ltsv
    </format>
  </store>
</match>